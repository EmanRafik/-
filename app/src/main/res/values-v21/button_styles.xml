<?xml version="1.0" encoding="utf-8"?>
<resources>

    <dimen name="roundedButtonHeight">45dp</dimen>

    <style name="roundedButton" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="roundedButton.heidi" parent="roundedButton">
        <item name="android:textColor">#B26132</item>
        <item name="android:background">@drawable/rounded_button_heidi_bg</item>
    </style>

    <style name="roundedButton.mud" parent="roundedButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_button_mud_bg</item>
    </style>

    <style name="roundedButton.darkTurmeric" parent="roundedButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/rounded_button_dark_bg</item>
    </style>

    <style name="roundedButton.lightTurmeric" parent="roundedButton">
        <item name="android:textColor">@color/black_overlay</item>
        <item name="android:background">@drawable/rounded_button_light_bg</item>
    </style>

    <style name="roundedButton.mudBrown" parent="roundedButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/rounded_button_brown_bg</item>
    </style>

</resources>