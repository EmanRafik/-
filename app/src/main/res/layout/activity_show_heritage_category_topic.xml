<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ShowHeritageCategoryTopicActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:layout_marginTop="60dp"
        android:contentDescription="@null"
        android:src="@drawable/bg5"
        android:layout_marginLeft="-14dp"
        android:layout_alignParentLeft="true"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:contentDescription="@null"
        android:src="@drawable/bg4"
        android:layout_marginRight="-27dp"
        android:layout_marginBottom="-25dp"
        android:layout_alignParentBottom="true"
        />

    <ProgressBar
        android:id="@+id/progress_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textView_no_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_info_found"
        android:textSize="40dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textColor="@color/transparent_foshya"/>

    <TextView
        android:id="@+id/heritage_category_headline_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="headline"
        android:textSize="40dp"
        android:layout_margin="25dp"
        android:gravity="center"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_heritage_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/heritage_category_headline_activity"/>

</RelativeLayout>